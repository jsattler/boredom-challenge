---
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Practice being bored through timed meditation sessions" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
		<link rel="icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
		<title>Boredom Challenge</title>
		<script is:inline>
			// Prevent FOUC: apply theme before render
			(function() {
				const stored = localStorage.getItem('boredom-theme');
				if (stored === 'dark' || (!stored && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
					document.documentElement.classList.add('dark');
				}
			})();
		</script>
	</head>
	<body class="bg-white text-black dark:bg-black dark:text-white min-h-screen font-sans font-normal select-none">
		<slot />
	</body>
</html>
